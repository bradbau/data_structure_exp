{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}\\source\\cJSON.h",
                "${workspaceFolder}\\source\\cJSON.c",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-fexec-charset=gbk"

                
            ],
            "problemMatcher": {
                "owner": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder} "
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "g++",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}\\source\\cJSON.h",
                "${workspaceFolder}\\source\\cJSON.c",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}",
                "-fexec-charset=gbk"
            ],
            "problemMatcher": {
                "owner": "$g++",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
   
}